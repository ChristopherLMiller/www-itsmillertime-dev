{
	"name": "www-itsmillertime-dev",
	"private": true,
	"version": "0.3.2",
	"type": "module",
	"scripts": {
		"dev": "pnpm run fetch-payload-types && vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"fetch-payload-types": "tsx scripts/sync-payload-types.ts",
		"generate-zod-schema": "tsx scripts/generate-zod-schema.ts ./src/lib/types/payload-types.ts ./src/lib/schemas/zod/generated.ts"
	},
	"devDependencies": {
		"@anthropic-ai/sdk": "^0.56.0",
		"@eslint/compat": "^1.3.1",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/kit": "^2.22.2",
		"@sveltejs/vite-plugin-svelte": "^5.1.0",
		"dotenv": "^17.0.1",
		"eslint": "^9.30.1",
		"eslint-config-prettier": "^10.1.5",
		"eslint-plugin-svelte": "^3.10.1",
		"globals": "^16.3.0",
		"mdsvex": "^0.12.6",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"stylelint": "^16.21.1",
		"stylelint-config-standard": "^38.0.0",
		"stylelint-declaration-strict-value": "^1.10.11",
		"svelte": "^5.35.2",
		"svelte-check": "^4.2.2",
		"tsx": "^4.20.3",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.35.1",
		"vite": "npm:rolldown-vite@latest"
	},
	"packageManager": "pnpm@10",
	"dependencies": {
		"@js-temporal/polyfill": "^0.5.1",
		"@upstash/redis": "^1.35.1",
		"nodejs": "link:@upstash/redis/nodejs",
		"qs-esm": "^7.0.2",
		"svelte-markdown": "^0.4.1",
		"ts-to-zod": "^3.15.0",
		"zod": "^3.25.73"
	},
	"engines": {
		"node": "^20.19.0"
	}
}
